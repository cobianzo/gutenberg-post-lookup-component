{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"lib": [ "dom", "dom.iterable", "esnext" ],
		"jsx": "react-jsx",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [ "src/**/*" ],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"/webpack.config.js",
		"/*.js"
	]
}
